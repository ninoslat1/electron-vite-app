{
  "name": "sqlite-electron-wasm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/electron.js",
  "scripts": {
    "electron-dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dev": "vite",
    "build": "vite build && npm run build:electron",
    "preview": "vite preview"
  },
  "build": {
    "appId": "sqlite-electron-wasm",
    "files": [
      "dist",
      "dist-electron"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.5",
    "sqlocal": "^0.14.1",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "wait-on": "^8.0.3"
  }
}
